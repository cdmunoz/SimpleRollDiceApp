<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.cdmunoz.simplerolldiceapp.RollDiceActivity"
    >


  <ImageView
      android:id="@+id/dice1"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:srcCompat="@drawable/ic_app_dice"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="180dp"
      android:layout_marginLeft="93dp"
      app:layout_constraintLeft_toLeftOf="parent"
      />
  <ImageView
      android:id="@+id/dice2"
      android:layout_width="100dp"
      android:layout_height="100dp"
      app:srcCompat="@drawable/ic_app_dice"
      app:layout_constraintLeft_toRightOf="@+id/dice1"
      android:layout_marginLeft="8dp"
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="180dp"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintHorizontal_bias="0.04"
      />
  <TextView
      android:id="@+id/textViewMsg"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:textAlignment="center"
      android:textSize="@dimen/general_text_view_size"
      android:text="@string/double_tap_msg"
      android:layout_marginLeft="8dp"
      app:layout_constraintLeft_toLeftOf="parent"
      android:layout_marginRight="8dp"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      android:layout_marginBottom="40dp"
      />
</android.support.constraint.ConstraintLayout>
